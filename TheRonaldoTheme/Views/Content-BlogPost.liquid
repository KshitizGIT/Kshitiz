{% zone "Header" %}
<section class="hero-wrap js-fullheight">
  <div class="overlay"></div>
  <div class="container">
    <div class="row no-gutters slider-text js-fullheight justify-content-center align-items-center">
      <div class="col-lg-8 col-md-6 ftco-animate d-flex align-items-center">
        <div class="text text-center">
          <h2>
          {{Model.ContentItem |display_text}}
          </h2>
        </div>
      </div>
    </div>
  </div>
  </div>
</section>
{% endzone %}

{%zone "BlogMeta" %}
<meta content="{{Model.ContentItem.DisplayText}}" name="title" />
<meta content="{{Model.ContentItem.Content.BlogPost.Subtitle.Text}}" name="description" />
<meta content="website" property="og:type" />
<meta content="{{Site.BaseUrl}}{{Model.ContentItem | display_url}}" property="og:url" />
<meta content="{{Model.ContentItem.DisplayText}}" property="og:title" />
<meta content="{{Model.ContentItem.Content.BlogPost.Subtitle.Text}}" property="og:description" />
<meta content="{{Site.BaseUrl}}{{Model.ContentItem.Content.BlogPost.Image.Paths.first | asset_url }}" property="og:image" />
<meta content="summary_large_image" property="twitter:card" />
<meta content="{{Site.BaseUrl}}{{Model.ContentItem | display_url}}" property="twitter:url" />
<meta content="{{Model.ContentItem.DisplayText}}" property="twitter:title" />
<meta content="{{Model.ContentItem.Content.BlogPost.Subtitle.Text}}" property="twitter:description" />
<meta content="{{Site.BaseUrl}}{{Model.ContentItem.Content.BlogPost.Image.Paths.first | asset_url }}" property="twitter:image" />
{% endzone %}
